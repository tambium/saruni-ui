{
  "name": "@tambium/saruni-ui",
  "author": "Tambium",
  "license": "Apache-2.0",
  "private": true,
  "workspaces": [
    "packages/*",
    "examples"
  ],
  "scripts": {
    "bootstrap": "lerna bootstrap --use-workspaces",
    "build": "concurrently yarn:build:*",
    "build:js": "lerna exec --parallel -- babel --out-dir ./dist --extensions \".js,.jsx,.ts,.tsx\" ./src",
    "build:dts": "tsc -b",
    "clean": "concurrently yarn:clean:*",
    "clean:lerna": "lerna clean --yes",
    "clean:lib": "rm -rf packages/*/dist && rm -rf examples/dist",
    "clean:ts": "rimraf packages/*/tsconfig*tsbuildinfo",
    "dev": "concurrently \"yarn build:js -- --watch\" \"yarn build:dts -- --watch\"",
    "lint:fix": "yarn lint:ts --fix",
    "lint:ts": "eslint 'packages/**/*.ts{,x}'",
    "release": "yarn build && lerna publish from-package",
    "start:stories": "lerna run start --stream --scope=examples",
    "version:patch": "lerna version patch"
  },
  "devDependencies": {
    "@babel/cli": "^7.10.4",
    "@babel/core": "^7.10.4",
    "@babel/plugin-transform-runtime": "^7.10.4",
    "@babel/preset-env": "^7.10.4",
    "@babel/preset-react": "^7.10.4",
    "@babel/preset-typescript": "^7.10.4",
    "@emotion/babel-preset-css-prop": "^10.0.27",
    "@emotion/core": "^10.0.27",
    "@emotion/css": "^10.0.27",
    "@emotion/styled": "^10.0.27",
    "@types/react": "^16.9.41",
    "@types/react-dom": "^16.9.5",
    "@typescript-eslint/eslint-plugin": "^3.5.0",
    "@typescript-eslint/parser": "^3.5.0",
    "concurrently": "^5.2.0",
    "eslint": "^7.3.1",
    "eslint-config-prettier": "^6.10.0",
    "eslint-plugin-import": "^2.22.0",
    "eslint-plugin-prettier": "^3.1.4",
    "eslint-plugin-react": "^7.20.3",
    "lerna": "^3.22.1",
    "prettier": "^2.0.5",
    "react": "^16.13.1",
    "react-dom": "^16.13.1",
    "rimraf": "^3.0.2",
    "typescript": "^3.9.6"
  },
  "dependencies": {}
}
