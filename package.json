{
  "name": "@tambium/saruni-ui",
  "author": "Tambium",
  "license": "Apache-2.0",
  "private": true,
  "workspaces": [
    "packages/*",
    "examples"
  ],
  "scripts": {
    "bootstrap": "lerna bootstrap --use-workspaces",
    "build": "concurrently yarn:build:*",
    "build:js": "lerna exec --parallel -- babel --out-dir ./dist --extensions \".js,.jsx,.ts,.tsx\" ./src",
    "build:dts": "tsc -b",
    "clean": "concurrently yarn:clean:*",
    "clean:lerna": "lerna clean --yes",
    "clean:lib": "rm -rf packages/*/dist",
    "lint:fix": "yarn lint:ts --fix",
    "lint:ts": "eslint 'packages/**/*.ts{,x}'",
    "release": "yarn build && lerna publish from-package",
    "start:stories": "lerna run start --stream --scope=examples",
    "version:patch": "lerna version patch --no-private"
  },
  "devDependencies": {
    "@babel/cli": "^7.8.4",
    "@babel/core": "^7.8.4",
    "@babel/preset-env": "^7.8.4",
    "@babel/preset-react": "^7.8.3",
    "@babel/preset-typescript": "^7.10.1",
    "@emotion/babel-preset-css-prop": "^10.0.27",
    "@emotion/core": "^10.0.27",
    "@emotion/css": "^10.0.27",
    "@emotion/styled": "^10.0.27",
    "@types/react": "^16.9.19",
    "@types/react-dom": "^16.9.5",
    "@typescript-eslint/eslint-plugin": "^2.19.0",
    "@typescript-eslint/parser": "^2.19.0",
    "concurrently": "^5.2.0",
    "eslint": "^6.8.0",
    "eslint-config-prettier": "^6.10.0",
    "eslint-plugin-import": "^2.20.1",
    "eslint-plugin-prettier": "^3.1.2",
    "eslint-plugin-react": "^7.18.3",
    "lerna": "^3.20.2",
    "prettier": "^1.19.1",
    "react": "^16.12.0",
    "react-dom": "^16.12.0",
    "rimraf": "^3.0.2",
    "typescript": "^3.7.5"
  },
  "dependencies": {}
}
